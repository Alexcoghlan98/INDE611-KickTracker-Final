  <div class="col-12"> <!--This determines the columns that all of the content goes into, it positions the content in certain parts of the page so that it all looks professional and arranged -->
    <div class="form-group mx-sm-3 mb-2"> <!-- This helps with the positioning and organisation of the page in general -->
      <h1>Your Previous Steps Results</h1> <!-- This is the title of the product -->
    </div>


    <html>
      <head>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">

          // Load Charts and the corechart package.
          google.charts.load('current', {'packages':['corechart']});

          // Draw the pie chart for Sarah's pizza when Charts is loaded.
          google.charts.setOnLoadCallback(drawlastweekChart);

          // Draw the pie chart for the Anthony's pizza when Charts is loaded.
          google.charts.setOnLoadCallback(drawyesterdayChart);

          // Callback that draws the pie chart for Sarah's pizza.
          function drawlastweekChart() {

            var data = google.visualization.arrayToDataTable([
         ['Element', 'Steps', { role: 'style' }],
         ['1st - 10th Min', 2759, '#157F1F'],
         ['11th - 20th Min', 3163, '#157F1F'],
         ['21st - 30th Min', 2995, '#157F1F'],
         ['31st - 45th Min', 3964, '#157F1F' ],
         ['46th - 50th Min', 1087, '#157F1F' ],
         ['51st - 60th Min', 1639, '#157F1F' ],
         ['61st - 70th Min', 1913, '#157F1F' ],
         ['71st - 80th Min', 2743, '#157F1F' ],
         ['81st - 90th Min', 2495, '#157F1F' ],
      ]);

            // Set chart options
            var options = {'title':'Average Steps From Yesterdays Session', titleTextStyle:{fontSize:'15', fontName:'"Avenir"'},
                           'hAxis': {title: 'Number of Steps', titleTextStyle: {color: 'black',fontSize:'15',fontName:'"Avenir"'}},
                           'vAxis': {minValue:10},
                           'backgroundColor': '#858b93',
                           'colors': ['#157F1F', 'green'],
                           animation:{
        duration: 2000,
        easing: 'out',
        startup: true //This is the new option
      },
                           'width':500,
                           'height':300};

            // Instantiate and draw the chart for Sarah's pizza.
            var chart = new google.visualization.BarChart(document.getElementById('lastweek_chart_div'));
            chart.draw(data, options);
          }

          // Callback that draws the pie chart for Anthony's pizza.
          function drawyesterdayChart() {

            var data = google.visualization.arrayToDataTable([
         ['Element', 'Steps', { role: 'style' }],
         ['1st - 10th Min', 2856, '#157F1F'],
         ['11th - 20th Min', 3289, '#157F1F'],
         ['21st - 30th Min', 2961, '#157F1F'],
         ['31st - 45th Min', 3467, '#157F1F' ],
         ['46th - 50th Min', 1188, '#157F1F' ],
         ['51st - 60th Min', 1548, '#157F1F' ],
         ['61st - 70th Min', 1699, '#157F1F' ],
         ['71st - 80th Min', 2912, '#157F1F' ],
         ['81st - 90th Min', 2038, '#157F1F' ],
      ]);

            // Set chart options
            var options = {'title':'Average Steps From Last Weeks Session', titleTextStyle:{fontSize:'15', fontName:'"Avenir"'},
                           'hAxis': {title: 'Number of Steps', titleTextStyle: {color: 'black',fontSize:'15',fontName:'"Avenir"'}},
                           'vAxis': {minValue:10},
                           'backgroundColor': '#858b93',
                           'colors': ['#157F1F', 'green'],
                           animation:{
        duration: 2000,
        easing: 'out',
        startup: true //This is the new option
      },
                           'width':500,
                           'height':300};

            // Instantiate and draw the chart for Anthony's pizza.
            var chart = new google.visualization.BarChart(document.getElementById('yesterday_chart_div'));
            chart.draw(data, options);
          }
        </script>
      </head>
      <body>
        <!--Table and divs that hold the pie charts-->
        <table class="columns">
          <tr>
            <td><div id="lastweek_chart_div" style="border: 3px solid #000"></div></td>
            <td><div id="yesterday_chart_div" style="border: 3px solid #000"></div></td>
          </tr>
        </table>
      </body>
    </html>



