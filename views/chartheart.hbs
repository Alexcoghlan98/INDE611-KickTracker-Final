<title>Heart Rate Result Charts</title>

<head>

  <div class="boxed"> <!--This is the box that you see on the screen which contains all of the content for the user to view -->

  <link rel="stylesheet" href="public/css/styles.css"></link>
  <!--Load the AJAX API-->
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">

    // Load the Visualization API and the corechart package.
    google.charts.load('current', {'packages':['corechart']});

    // Set a callback to run when the Google Visualization API is loaded.
    google.charts.setOnLoadCallback(drawChart);

    // Callback that creates and populates a data table,
    // instantiates the pie chart, passes in the data and
    // draws it.
    function drawChart() {

      var data = google.visualization.arrayToDataTable([ {{!-- this section is the data input for the chart --}}
   ['Element', 'Heart Rate In BPM', { role: 'style' }],
   ['1st - 10th Min', 60, '#157F1F'],
   ['11th - 20th Min', 68, '#157F1F'],
   ['21st - 30th Min', 74, '#157F1F'],
   ['31st - 45th Min', 70, '#157F1F' ],
   ['46th - 50th Min', 67, '#157F1F' ],
   ['51st - 60th Min', 76, '#157F1F' ],
   ['61st - 70th Min', 81, '#157F1F' ],
   ['71st - 80th Min', 79, '#157F1F' ],
   ['81st - 90th Min', 82, '#157F1F' ],
]);

      // Set chart options
      var options = {'title':'Average Heart Rate From Todays Session', titleTextStyle:{fontSize:'15', fontName:'"Avenir"'}, {{!-- this all here declares the options and styling of the charts --}}
                     'hAxis': {title: 'BPM', titleTextStyle: {color: 'black',fontSize:'15',fontName:'"Avenir"'}},
                     'vAxis': {minValue:10},
                     'backgroundColor': '#858b93',
                     'colors': ['#157F1F', 'green'],
                     animation:{ {{!-- this sets the animation for when the chart loads up --}}
  duration: 2000,
  easing: 'out',
  startup: true //This is the new option
},
                     'width':500, {{!-- height of chart --}}
                     'height':300}; {{!-- width of chart --}}


      // Instantiate and draw our chart, passing in some options.
      var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
      chart.draw(data, options);
    }
  </script>
</head>

<body>
  <!--Div that will hold the bar chart-->
  <div class="col-12"> <!--This determines the columns that all of the content goes into, it positions the content in certain parts of the page so that it all looks professional and arranged -->
    <div class="form-group mx-sm-3 mb-2"> <!-- This helps with the positioning and organisation of the page in general -->
      <p>Your Heart Rate</p> <!-- This is the title of the product -->
      <div id="chart_div"></div>
    </div>
    <div class="text-center">
      <div class="btn-group" role="group">
        <a class="button button1" href="/prevheart"><i class="fas fa-folder-open fa-lg"></i> Previous Heart Rate Results</a> <!-- This is the button on the landing page that sends the user to the contents page. Also has the icon to add some asthetics to the page -->
    </div>
    </div>
    <div class="text-center">
      <div class="btn-group" role="group">
        <a class="button button1" href="/contents"><i class="fas fa-list fa-lg"></i> Back To Contents</a> <!-- This is the button on the landing page that sends the user to the contents page. Also has the icon to add some asthetics to the page -->
    </div>
    </div>


    </div>
  </div>

</body>
